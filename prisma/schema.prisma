generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id                Int      @id @default(autoincrement())
  name              String
  creator           String   
  drawings          String[] 

  Drawing Drawing[]
}

model Drawing {
  id                Int      @id @default(autoincrement())
  boardId           Int 
  type              String
  lineWidth         Int
  strokeColor       String
  fillColor         String
  posX              Int[]
  posY              Int[]
  username          String

  board             Board    @relation(fields:[boardId], references: [id])
}