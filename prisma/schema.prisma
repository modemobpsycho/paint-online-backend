generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model Board {
  id        Int      @id @default(autoincrement())
  name      String
  creator   String

  drawings  Drawing[]
}

model User2 {
  id       Int      @id @default(autoincrement())
  username String   @unique

  Drawing Drawing[] 
}

model Drawing {
  id                Int      @id @default(autoincrement())
  boardId           Int 
  userId            Int
  type              String
  lineWidth         Int
  strokeColor       String
  fillColor         String?   
  posX              Int[]
  posY              Int[]
  
  board             Board    @relation(fields: [boardId], references: [id], onDelete: Cascade) 
  user              User2     @relation(fields: [userId], references: [id])
}


// for 4th task
model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  username          String
  position          String?   
  password          String
  lastLogin         DateTime @default(now())
  access            Boolean  @default(false)
  refreshToken      String?
}
